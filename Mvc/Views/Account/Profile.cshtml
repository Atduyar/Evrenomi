@{
    ViewData["Title"] = "Profile";
    ViewData["Header"] = "Profile";
}
@section Scripts {
    <script src="~/js/profile.js" asp-append-version="true"></script>
}

<div style="margin-top: -84px;">
    <img src="~/img/pp_default.jpg" id="ppcircle" class="rounded-circle" alt="Cinque Terre" width="132" height="132" />
</div>

<div class="text-center">
    <button id="checkNameBtn" class="btn btn-primary btn-block">T İsim Kontrol</button>
    <button id="checkBtn" class="btn btn-primary btn-block">Eposta Kontrol</button>
    <button id="verifyBtn" class="btn btn-primary btn-block emailVerifiedoff" style="display: none;">Eposta Onaylat</button>
    @* onaylıysa kullanılabilecek özelikler *@
    @*<button id="checkBtn" class="btn btn-primary btn-block emailVerifiedon" style="display: none;">Sifre Değistir</button>
        <button id="checkBtn" class="btn btn-primary btn-block emailVerifiedon" style="display: none;">Eposta Değistir</button>*@
</div>

<div class="container text-center">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <div class="form-group">
                <label>E-posta</label>
                <input type="email" class="form-control" id="email" placeholder="E-posta">
                <button id="checkEmailBtn" class="btn btn-primary btn-block emailVerifiedon" style="display: none;">Eposta Değistir</button>
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
                <button id="checkPasswordBtn" class="btn btn-primary btn-block emailVerifiedon" style="display: none;">Sifre Değistir</button>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3 well">
            <h1>Test</h1>
        </div>
    </div>
</div>
